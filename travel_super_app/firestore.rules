rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Places collection - PUBLIC READ, ADMIN WRITE
    // All users can browse places, only admins can modify
    match /places/{placeId} {
      allow read: if true;  // Public read for all places
      allow write: if false;  // No direct writes - use Admin SDK only
      
      // Allow authenticated users to update specific fields (e.g., user-generated content)
      allow update: if isAuthenticated() 
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['rating', 'reviewCount']);
    }
    
    // Trails collection - PUBLIC READ, ADMIN WRITE
    match /trails/{trailId} {
      allow read: if true;  // Public read
      allow write: if false;  // Admin SDK only
      
      allow update: if isAuthenticated()
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['rating', 'reviewCount']);
    }
    
    // Collections (featured, curated) - PUBLIC READ, ADMIN WRITE
    match /collections/{collectionId} {
      allow read: if true;
      allow write: if false;  // Admin SDK only
    }
    
    // Categories - PUBLIC READ, ADMIN WRITE
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }
    
    // User profiles - OWNER READ/WRITE
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
      
      // Saved places subcollection
      match /saved_places/{placeId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // Saved trails subcollection
      match /saved_trails/{trailId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // User's custom collections
      match /my_collections/{collectionId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // Trip plans
      match /trips/{tripId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }
    
    // Reviews - AUTHENTICATED READ, OWNER WRITE
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.createdAt == request.time;
      allow update: if isOwner(resource.data.userId)
                    && request.resource.data.userId == resource.data.userId;
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Check-ins (user visited places) - PUBLIC READ, OWNER WRITE
    match /checkins/{checkinId} {
      allow read: if true;
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Photos uploaded by users - PUBLIC READ, OWNER WRITE
    match /photos/{photoId} {
      allow read: if true;
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Analytics/stats - ADMIN WRITE ONLY
    match /analytics/{doc} {
      allow read: if false;
      allow write: if false;  // Admin SDK only
    }
    
    // App config - PUBLIC READ, ADMIN WRITE
    match /config/{configId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
