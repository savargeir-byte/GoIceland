rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin/editor
    function isEditor() {
      return isAuthenticated() &&
             (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'editor');
    }
    
    // Places images - Public read, Editor write
    match /places/{placeId}/{fileName} {
      allow read: if true;  // Public read
      allow write: if isEditor();  // Only editors can upload
      allow delete: if isEditor();  // Only editors can delete
    }
    
    // Trails images - Public read, Editor write
    match /trails/{trailId}/{fileName} {
      allow read: if true;
      allow write: if isEditor();
      allow delete: if isEditor();
    }
    
    // User uploaded photos - Public read, Owner write
    match /user_photos/{userId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Collection images - Public read, Editor write
    match /collections/{collectionId}/{fileName} {
      allow read: if true;
      allow write: if isEditor();
      allow delete: if isEditor();
    }
    
    // Validation rules for all uploads
    function isValidImage() {
      return request.resource.size < 10 * 1024 * 1024  // Max 10MB
             && request.resource.contentType.matches('image/.*');
    }
    
    // Apply validation to all uploads
    match /{allPaths=**} {
      allow write: if request.resource != null && isValidImage();
    }
  }
}
